{
    "files.defaultLanguage": "${activeEditorLanguage}",
    "cSpell.language": "en,es",
    "latex-workshop.latex.tools": [
        {
            "name": "process_feynman",
            "command": "bash",
            "args": [
                "-c",
                "cd feyngraphs && for f in *.mp; do [ -f \"$f\" ] && mpost \"$f\" > /dev/null 2>&1; done"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "--shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (with Feynman)",
            "tools": ["process_feynman", "latexmk"]
        },
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        },
        {
            "name": "pdflatex",
            "tools": ["pdflatex"]
        }
    ],
    "latex-workshop.latex.autoBuild.run": "onSave"
}